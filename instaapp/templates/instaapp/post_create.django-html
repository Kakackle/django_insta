{% extends 'base.django-html' %}
{% load static %}
{% block title %} Post create {% endblock title %}
{% block styles %}
<link rel="stylesheet" href="{% static 'accounts/accounts.css' %}">
<link rel="stylesheet" href="{% static 'bootstrap/bootstrap.min.css' %}">
{% endblock styles %}

{% load crispy_forms_tags %}

{% block content %}
    <main class="main">
        <h1> Create a new post </h1>
        <form enctype="multipart/form-data" method="post" novalidate>
            {% csrf_token %}
            {{form|crispy}}
            <button type="submit" class="btn btn-primary hover">POST</button>
        </form>
    </main>
{% endblock content %}

{% block scripts %}
<script href="{% static 'bootstrap/bootsrtap.min.js' %}"></script>
{% endblock scripts%}